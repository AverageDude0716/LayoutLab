<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Home">

    <!-- top-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_settingsHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@drawable/setting" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logoHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="125dp"
            android:layout_marginRight="125dp"
            android:foreground="@drawable/logo_transparent"
            app:backgroundTint="@android:color/transparent" />

        <Button
            android:id="@+id/btn_profileHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@drawable/profile" />

    </LinearLayout>

    <!--header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="19dp"
            android:text="Hi there!"
            android:textSize="20sp" />

    </LinearLayout>

    <!--search-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Search" />

    </LinearLayout>

    <!--categories-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <!-- scroll view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="373dp"
        android:layout_height="180dp"
        android:background="@drawable/rounded_corner_black"
        android:text="Saved Designs" />
    <Button
        android:id="@+id/btn_drafts"
        android:layout_width="373dp"
        android:layout_height="180dp"
        android:background="@drawable/rounded_corner_black"
        android:text="Drafts" />
    <Button
        android:id="@+id/btn_library"
        android:layout_width="373dp"
        android:layout_height="180dp"
        android:background="@drawable/rounded_corner_black"
        android:text="Library" />
    <Button
        android:id="@+id/btn_explore"
        android:layout_width="373dp"
        android:layout_height="180dp"
        android:background="@drawable/rounded_corner_black"
        android:text="Explore" />


</LinearLayout>